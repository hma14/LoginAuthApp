@model AuthenticationApp.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<div class="row top grey-text">
    <div class="offset-md-4 col-md-3">

            @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h3><i class="fa fa-mobile fa-2x"></i> Add a cell phone number</h3>

                <br />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="md-form">
                    <i class="fa fa-phone prefix"></i>
                    @Html.LabelFor(m => m.Number, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                </div>
                <br />
                <div class="md-form text-xs-center">
                    <button type="submit" class="btn btn-cyan" style="width:50%;">Submit</button>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

    </div>
</div>
