@model AuthenticationApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="row top">
    <div class="offset-md-4 col-md-4">

        <!--Form without header-->
        <div class="card-block">

            <!--Header-->
            <div class="text-xs-center">
                <h3><i class="fa fa-keyboard-o"></i> Sign Up</h3>
                <hr class="mt-2 mb-2">
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <!--Body-->
                <div class="md-form">
                    <i class="fa fa-envelope prefix"></i>
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                        <div class="md-form">
                            <i class="fa fa-lock prefix"></i>
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="md-form">
                            <i class="fa fa-lock prefix"></i>
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>

                        <div class="text-xs-center" style="margin-top:80px;">
                            <button type="submit" class="btn btn-cyan" style="width:50%;">Sign Up</button>
                        </div>
            }
        </div>
    </div>
</div>
<!--/Form without header-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
